{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"noEmitOnError": true,
		"pretty": true,
		"target": "es5",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"lib": ["es2015", "dom"],
		"jsx": "react",
		"baseUrl": "./source",
		"paths": {
			"~/data/*": ["data/*"],
			"~/c/*": ["ts/controller/*"]
		},
		"typeRoots": ["./source/@types", "node_modules/@types"]
	},
	"include": ["source/**/ts/**/*", "source/@types/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}